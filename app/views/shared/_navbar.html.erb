<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag("LOGO files-05.png") %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Messages", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
          <% if @musician = Musician.find_by(user_id: current_user.id) %>
              <%= link_to "Dashboard", musician_invitations_path(@musician), class: "nav-link" %>
          <% elsif @orchestra = Orchestra.find_by(user_id: current_user.id)%>
            <%= link_to "Dashboard", orchestra_invitations_path(@orchestra), class: "nav-link" %>
          <% else %>
          <%= link_to "Dashboard","#", class: "nav-link" %>
          <% end%>
          </li>
          <li class="nav-item dropdown">
          <% if @musician = Musician.find_by(user_id: current_user.id) %>
            <%= cl_image_tag @musician.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% elsif @orchestra = Orchestra.find_by(user_id: current_user.id)%>
            <%= cl_image_tag @orchestra.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
            <%= image_tag "https://i1.wp.com/suiteplugins.com/wp-content/uploads/2019/10/blank-avatar.jpg?ssl=1", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end%>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <% if current_user %>
                <% if @musician_nav = Musician.find_by(user_id: current_user.id)%>
                  <%= link_to "Profile Musician", musician_path(@musician_nav), class: "dropdown-item" %>
                  <% if @orchestra_nav = Orchestra.find_by(user_id: current_user.id)%>
                      <%= link_to "Profile Orchestra", orchestra_path(@orchestra_nav), class: "dropdown-item" %>
                  <% end %>
                <% elsif @orchestra_nav =Orchestra.find_by(user_id: current_user.id)%>
                    <%= link_to "Profile Orchestra", orchestra_path(@orchestra_nav), class: "dropdown-item" %>
                <% else %>
                    <%= link_to "Profile", '#', class: "d-none" %>
                <% end %>

              <% end %>

              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>

        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
