<%= simple_form_for :search, url: orchestras_path, method: "GET" do |f| %>
  <div class="inline-form">
    <%= f.input :zip_code, label: "Zip Code", required: false %>
    <%= f.input :size, label: "Size", required: false%>
    <%= f.input :type_orchestra,
        label: "Type of Orchestra" ,
        collection: Orchestra::TYPE_ORCHESTRA, required: false %>
    <%= f.input :style, collection: Orchestra::STYLE, required: false%>

  </div>
  <div class='CTAs'>
    <%= f.submit %>
    <%= link_to "Reset", orchestras_path  %>
    <%= link_to "Return to home page", root_path %>
  </div>
<% end %>
