<%= simple_form_for([@orchestra, @post]) do |f| %>
  <%= f.input :instrument %>
  <%= f.input :level%>
  <%= f.input :date,
              html5: true,
              data: { post_choice_target: 'oneshot' }
               %>
  <%= f.input :type_post%>
  <%= f.input :style%>
  <%= f.input :description, label: "Tell us more" %>
  <div class="buttons">
    <%= f.submit%>
    <button>
      <%= link_to "Return to home page", root_path %>
    </button>
  </div>

<% end %>
